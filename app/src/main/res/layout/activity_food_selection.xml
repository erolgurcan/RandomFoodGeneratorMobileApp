<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food1">

    <androidx.cardview.widget.CardView
        android:id="@+id/menuSelectionCard"
        android:layout_width="359dp"
        android:layout_height="489dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="148dp"
        android:background="@android:color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/cuisineTypeSpinner"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="180dp"
            android:entries="@array/cuisine_types"
            android:fontFamily="@font/poppins_medium"
            android:minHeight="48dp"
            android:prompt="@string/select_cuisine_type"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/calorieEditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Maximum Calories"
            android:inputType="number"
            android:minHeight="48dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_black"
            android:text="Hello!"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textPlease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="130dp"

            android:fontFamily="@font/poppins_light"
            android:text="Please tell us what would you like?"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="85dp"

            android:fontFamily="@font/poppins_light"
            android:text="User"
            android:textSize="20sp" />


        <!-- Add any other EditText fields for menu selection as needed -->

    </androidx.cardview.widget.CardView>

    <!-- Add any other views or widgets for the menu selection layout -->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFoodSubmit"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:text="Submit"
        android:textColor="@color/black"
        app:cardMaxElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuSelectionCard" />

</androidx.constraintlayout.widget.ConstraintLayout>

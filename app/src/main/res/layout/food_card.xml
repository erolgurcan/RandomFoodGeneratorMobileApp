<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginCard"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="24dp">

        <ImageView
            android:id="@+id/foodView"
            android:layout_width="162dp"
            android:layout_height="118dp"


            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/foodHeader1"
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_gravity="center|bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:fontFamily="@font/poppins_black"
            android:hint="@string/food_title"
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/foodView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp,TextViewEdits" />

        <TextView
            android:id="@+id/foodHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/calories"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/foodHeader3"
            app:layout_constraintStart_toEndOf="@+id/foodView"
            app:layout_constraintTop_toBottomOf="@+id/foodHeader1"
            tools:ignore="MissingConstraints,SmallSp" />

        <TextView
            android:id="@+id/foodHeader3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="74dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/calories"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/foodHeader2"
            app:layout_constraintTop_toBottomOf="@+id/foodHeader1"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>